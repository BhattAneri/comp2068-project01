<!--
  Step 1: The form must be sharable between the new and edit views.
-->
<form action="<%= (typeof actionPath === 'undefined') ? '/spotfinders' : actionPath %>", method="POST">
  <% if (typeof actionPath !== 'undefined') { %>
    <input type="hidden" name="id" value="<%= formData.id %>">
  <% } %>

  <div class="form-group">
    <label for="destination">Destination</label>
    <select name="destination" class="form-control">
      <option>Select a Destination</option>
      <% for (let destination of destinations) { %>
        <option <%= (destination === formData.destinations) && 'selected' %> value="<%= destination %>"><%= destination %></option>
      <% } %>
    </select>
  </div>

  <div class="form-group">
    <label for="typeOfVacation">Type of Vacation</label>
    <select name="typeOfVacation" class="form-control">
      <option value="Long Vacation">Long Vacation</option>
      <option <%= formData.typeOfVacation && formData.typeOfVacation === 'Short Vacation' ? 'selected' : null %> value="Short Vacation">Short Vacation</option>
    </select>
  </div>

  <div class="form-group">
    <label for="holidayBudget">Holiday Budget</label>
    <input type="number" name="holidayBudget" class="form-control" value="<%= formData.holidayBudget %>" min="1" step="1"/>
  </div>

  <div class="form-group">
    <button class="btn btn-dark">Submit</button>
  </div>
</form>